@page "/"
@using ChessTournamentManager.Client.Services
@using ChessTournamentManager.Shared.Models
@using Microsoft.EntityFrameworkCore
@inject DatabaseManager DbManager
@inject ExcelImportService ExcelService
@inject IDbContextFactory<ChessDbContext> DbFactory
@inject IJSRuntime JS
@inject NavigationManager NavManager

<PageTitle>System & Import</PageTitle>

<div class="container-fluid px-4 py-3 min-vh-100 bg-light">
    <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
        <div>
            <h2 class="fw-bold text-dark mb-0"><i class="bi bi-cloud-arrow-up text-primary me-2"></i>System & Import
            </h2>
            <span class="text-muted small">Datenbank-Management und Excel-Dateneinspielung</span>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(SuccessMessage))
    {
        <div class="alert alert-success border-0 shadow-sm d-flex align-items-center mb-4 fw-bold">
            <i class="bi bi-check-circle-fill fs-5 me-2"></i> @SuccessMessage
        </div>
    }
    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger border-0 shadow-sm d-flex align-items-center mb-4 fw-bold">
            <i class="bi bi-exclamation-triangle-fill fs-5 me-2"></i> @ErrorMessage
        </div>
    }

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                    <h5 class="fw-bold text-dark"><i class="bi bi-database me-2 text-secondary"></i>1. Datenbank
                        Management</h5>
                </div>
                <div class="card-body">

                    <div class="bg-light p-3 rounded-3 mb-4 border">
                        <span class="fw-bold text-dark d-block mb-2"><i class="bi bi-browser-chrome me-1"></i> Lokaler
                            Browser-Speicher</span>
                        <p class="text-muted small mb-3">
                            @(IsAutoLoading ? "Prüfe automatischen Start-Cache..." : "Sichert die Daten permanent im                            Browser-Cache.")
                        </p>
                        <div class="d-flex gap-2">
                            <button class="btn btn-primary w-50 shadow-sm" @onclick="SaveToBrowserCache"
                                disabled="@IsAutoLoading">
                                <i class="bi bi-save me-1"></i> Im Browser speichern
                            </button>
                            <button class="btn btn-outline-secondary w-50 shadow-sm"
                                @onclick="() => LoadFromBrowserCache(false)" disabled="@IsAutoLoading">
                                <i class="bi bi-cloud-download me-1"></i> Aus Browser laden
                            </button>
                        </div>
                    </div>

                    <span class="fw-bold text-dark d-block mb-2 mt-4"><i class="bi bi-pc-display me-1"></i> Manuelles
                        PC-Backup (.db)</span>
                    <InputFile OnChange="@LoadDbFromFile" accept=".db" class="form-control mb-3" />
                    <button class="btn btn-outline-dark w-100" @onclick="SaveDbToFile">
                        <i class="bi bi-download me-1"></i> Backup auf PC herunterladen
                    </button>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                    <h5 class="fw-bold text-dark"><i class="bi bi-file-earmark-spreadsheet me-2 text-success"></i>2.
                        Turnier-Import</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted small mb-3">Offizielle Auswertung ("chessResultsList.xlsx") hochladen.</p>
                    <InputFile OnChange="@ImportExcel" accept=".xlsx" class="form-control" />

                    @if (ImportedPlayers != null)
                    {
                        <div class="bg-white border rounded-3 p-4 mt-4 shadow-sm">
                            <div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
                                <span class="fw-bold text-dark">Datensätze:</span>
                                <span class="badge bg-success fs-6">@ImportedPlayers.Count Spieler</span>
                            </div>

                            <div class="row g-3 mb-4">
                                <div class="col-md-5">
                                    <label class="form-label text-muted small fw-bold">Turnier-Saison</label>
                                    <select class="form-select border-primary fw-bold" @bind="SelectedImportSeason">
                                        @foreach (var season in ImportSeasons)
                                        {
                                            <option value="@season">Saison @season
                                            </option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-7">
                                    <label class="form-label text-muted small fw-bold">Austragungsort</label>
                                    <input @bind="TournamentName" class="form-control" placeholder="z.B. Frankenburg" />
                                </div>
                            </div>

                            <button class="btn btn-success w-100 fw-bold shadow-sm py-2" @onclick="SaveToDatabase">
                                <i class="bi bi-check-circle me-1"></i> Ins System integrieren
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Player>? ImportedPlayers;
    private string TournamentName = "Neues Turnier";
    private string SuccessMessage = "";
    private string ErrorMessage = "";
    private bool IsAutoLoading = false;

    private List<string> ImportSeasons = new();
    private string SelectedImportSeason = "";

    protected override async Task OnInitializedAsync()
    {
        // SAISONS GENERIEREN
        int currentYear = DateTime.Now.Year;
        int startYear = Math.Min(2023, currentYear - 3);
        for (int y = startYear; y <= currentYear + 1; y++) ImportSeasons.Add($"{y}/{y + 1}");
        int currentSeasonStart = DateTime.Now.Month >= 9 ? currentYear : currentYear - 1;
        SelectedImportSeason = $"{currentSeasonStart}/{currentSeasonStart + 1}";

        // --- DER FIX FÜR DEN CRASH ---
        // Bevor wir irgendwas abfragen, stellen wir sicher, dass die Tabellen überhaupt existieren!
        using var db = await DbFactory.CreateDbContextAsync();
        await db.Database.EnsureCreatedAsync();

        // Jetzt können wir gefahrlos prüfen, ob die Datenbank leer ist
        bool isDbEmpty = !await db.Tournaments.AnyAsync();

        if (isDbEmpty)
        {
            IsAutoLoading = true;
            await LoadFromBrowserCache(silent: true);
            IsAutoLoading = false;
        }
    }

    // --- 1. BROWSER SPEICHER LOGIK ---

    private async Task SaveToBrowserCache()
    {
        try
        {
            ErrorMessage = ""; SuccessMessage = "";
            var base64Db = await DbManager.GetDatabaseAsBase64Async();
            if (string.IsNullOrEmpty(base64Db)) { ErrorMessage = "Datenbank ist leer."; return; }
            await JS.InvokeVoidAsync("window.browserStorage.saveDb", base64Db);
            SuccessMessage = "Datenbank erfolgreich im Browser-Cache gesichert!";
        }
        catch (Exception ex) { ErrorMessage = "Speichern fehlgeschlagen: " + ex.Message; }
    }

    private async Task LoadFromBrowserCache(bool silent)
    {
        try
        {
            if (!silent) { ErrorMessage = ""; SuccessMessage = ""; }
            var base64Db = await JS.InvokeAsync<string>("window.browserStorage.loadDb");

            if (string.IsNullOrEmpty(base64Db))
            {
                if (!silent) ErrorMessage = "Kein Backup im Cache gefunden.";
                return;
            }

            // DB aus dem Cache im Hintergrund austauschen
            using var memoryStream = new MemoryStream(Convert.FromBase64String(base64Db));
            await DbManager.ImportDatabase(memoryStream);

            if (!silent) SuccessMessage = "Datenbank sofort live aus dem Browser-Cache geladen!";
            else SuccessMessage = "Daten beim Start automatisch aus dem Cache wiederhergestellt.";

            StateHasChanged();
        }
        catch (Exception ex) { if (!silent) ErrorMessage = "Laden fehlgeschlagen: " + ex.Message; }
    }


    // --- 2. DATEI-BACKUP LOGIK ---

    private async Task LoadDbFromFile(InputFileChangeEventArgs e)
    {
        try
        {
            ErrorMessage = ""; SuccessMessage = "";
            using var stream = e.File.OpenReadStream(maxAllowedSize: 50 * 1024 * 1024);
            await DbManager.ImportDatabase(stream);

            SuccessMessage = "Datenbank live aus Datei geladen!";
            StateHasChanged();
        }
        catch (Exception ex) { ErrorMessage = "Datei-Import fehlgeschlagen: " + ex.Message; }
    }

    private async Task SaveDbToFile() => await DbManager.DownloadDatabase();


    // --- 3. EXCEL IMPORT LOGIK ---

    private async Task ImportExcel(InputFileChangeEventArgs e)
    {
        using var stream = e.File.OpenReadStream();
        var memoryStream = new MemoryStream();
        await stream.CopyToAsync(memoryStream);
        memoryStream.Position = 0;
        ImportedPlayers = ExcelService.ReadExcelStream(memoryStream);
        ErrorMessage = ""; SuccessMessage = "";
    }

    private async Task SaveToDatabase()
    {
        if (ImportedPlayers == null || string.IsNullOrWhiteSpace(TournamentName)) return;

        using var db = await DbFactory.CreateDbContextAsync();
        await db.Database.EnsureCreatedAsync();

        int seasonStartYear = int.Parse(SelectedImportSeason.Split('/')[0]);
        var tournament = new Tournament { Name = TournamentName, Date = new DateTime(seasonStartYear, 10, 1) };
        db.Tournaments.Add(tournament);
        await db.SaveChangesAsync();

        foreach (var p in ImportedPlayers)
        {
            Club? existingClub = null;
            if (p.Club != null && !string.IsNullOrWhiteSpace(p.Club.Name))
            {
                existingClub = await db.Clubs.FirstOrDefaultAsync(c => c.Name.ToLower() == p.Club.Name.ToLower());
                if (existingClub == null)
                {
                    existingClub = new Club { Name = p.Club.Name }; db.Clubs.Add(existingClub); await
                    db.SaveChangesAsync();
                }
            }

            var existingPlayer = await db.Players.FirstOrDefaultAsync(dbPlayer => dbPlayer.Firstname.ToLower() ==
            p.Firstname.ToLower() && dbPlayer.Lastname.ToLower() == p.Lastname.ToLower());
            if (existingPlayer == null)
            {
                p.Club = null; p.ClubId = existingClub?.ClubId; db.Players.Add(p); await
                db.SaveChangesAsync(); existingPlayer = p;
            }
            else
            {
                if (p.Elo.HasValue) existingPlayer.Elo = p.Elo; if (existingPlayer.ClubId == null && existingClub != null)
                    existingPlayer.ClubId = existingClub.ClubId; db.Players.Update(existingPlayer); await db.SaveChangesAsync();
            }

            double calculatedPoints = Math.Max(10, 21 - p.TournamentRank);
            db.PlayerTournaments.Add(new PlayerTournament
            {
                TournamentId = tournament.TournamentId,
                PlayerId =
            existingPlayer.PlayerId,
                Points = calculatedPoints,
                Rank = p.TournamentRank
            });
        }
        await db.SaveChangesAsync();
        ImportedPlayers = null; TournamentName = "Neues Turnier"; SuccessMessage = $"Turnier erfolgreich integriert.";
    }
}