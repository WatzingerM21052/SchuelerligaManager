@page "/"
@using ChessTournamentManager.Client.Services
@using ChessTournamentManager.Shared.Models
@using Microsoft.EntityFrameworkCore
@using System.IO
@inject DatabaseManager DbManager
@inject ExcelImportService ExcelService
@inject IDbContextFactory<ChessDbContext> DbFactory
@inject IJSRuntime JS
@inject NavigationManager NavManager

<PageTitle>System & Import</PageTitle>

<div class="container-fluid px-4 py-3 min-vh-100 bg-light">
    <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
        <div>
            <h2 class="fw-bold text-dark mb-0"><i class="bi bi-cloud-arrow-up text-primary me-2"></i>System & Import</h2>
            <span class="text-muted small">Datenbank-Management und intelligente Smart-Merge Dateneinspielung</span>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(SuccessMessage))
    {
        <div class="alert alert-success border-0 shadow-sm d-flex align-items-center mb-4 fw-bold">
            <i class="bi bi-check-circle-fill fs-5 me-2"></i> @SuccessMessage
        </div>
    }
    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger border-0 shadow-sm d-flex align-items-center mb-4 fw-bold">
            <i class="bi bi-exclamation-triangle-fill fs-5 me-2"></i> @ErrorMessage
        </div>
    }

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                    <h5 class="fw-bold text-dark"><i class="bi bi-database me-2 text-secondary"></i>1. Datenbank Management</h5>
                </div>
                <div class="card-body">
                    <div class="bg-light p-3 rounded-3 mb-4 border">
                        <span class="fw-bold text-dark d-block mb-2"><i class="bi bi-browser-chrome me-1"></i> Lokaler Browser-Speicher</span>
                        <p class="text-muted small mb-3">@(IsAutoLoading ? "Prüfe automatischen Start-Cache..." : "Sichert die Daten permanent im Browser-Cache.")</p>
                        <div class="d-flex gap-2">
                            <button class="btn btn-primary shadow-sm flex-grow-1" @onclick="SaveToBrowserCache" disabled="@IsAutoLoading" title="Speichern"><i class="bi bi-save me-1"></i> Speichern</button>
                            <button class="btn btn-outline-secondary shadow-sm flex-grow-1" @onclick="() => LoadFromBrowserCache(false)" disabled="@IsAutoLoading" title="Laden"><i class="bi bi-cloud-download me-1"></i> Laden</button>
                            <button class="btn btn-outline-danger shadow-sm" @onclick="DeleteBrowserCache" disabled="@IsAutoLoading" title="Browser-Cache leeren"><i class="bi bi-trash"></i></button>
                        </div>
                    </div>
                    <span class="fw-bold text-dark d-block mb-2 mt-4"><i class="bi bi-pc-display me-1"></i> Manuelles PC-Backup (.db)</span>
                    <InputFile OnChange="@LoadDbFromFile" accept=".db" class="form-control mb-3" />
                    <button class="btn btn-outline-dark w-100" @onclick="SaveDbToFile"><i class="bi bi-download me-1"></i> Backup auf PC herunterladen</button>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                    <h5 class="fw-bold text-dark"><i class="bi bi-trophy-fill me-2 text-success"></i>2. Event-Import (Turniergruppe)</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted small mb-3">Zieht die Excel-Dateien aller Altersklassen (z.B. U10, U12...) eines Events ein und fasst sie zu <b>EINEM Gesamtevent</b> zusammen.</p>
                    <InputFile OnChange="@ImportMultipleExcel" accept=".xlsx" multiple class="form-control form-control-lg bg-light border-primary" />
                    
                    @if (PendingImports.Any())
                    {
                        <div class="bg-white border rounded-3 p-3 mt-4 shadow-sm">
                            <div class="d-flex align-items-center mb-3">
                                <span class="badge bg-primary fs-6 me-2">@PendingImports.Count Dateien</span> für dieses Event.
                            </div>

                            <div class="mb-3">
                                <label class="form-label text-muted small fw-bold">Name des Gesamtevents (z.B. Runde 1 - Ort):</label>
                                <input @bind="MasterTournamentName" class="form-control fw-bold fs-6 border-primary" placeholder="z.B. Runde 1 - Frankenburg" />
                            </div>

                            <div class="mb-3 bg-light p-2 rounded border">
                                <label class="form-label text-muted small fw-bold">Saison / Datum:</label>
                                <div class="d-flex gap-2">
                                    <input type="date" class="form-control" @bind="MasterTournamentDate" />
                                </div>
                            </div>

                            <div class="list-group mb-3" style="max-height: 100px; overflow-y: auto;">
                                @foreach (var import in PendingImports)
                                {
                                    <div class="list-group-item p-2 text-muted small">
                                        <i class="bi bi-file-earmark-excel text-success me-1"></i> @import.FileName 
                                        @if (!string.IsNullOrWhiteSpace(ExtractAgeGroupFromFilename(import.FileName)))
                                        {
                                            <span class="badge bg-warning text-dark ms-1">@ExtractAgeGroupFromFilename(import.FileName)</span>
                                        }
                                        <span class="float-end badge bg-secondary">@import.Players.Count Spieler</span>
                                    </div>
                                }
                            </div>

                            <button class="btn btn-success w-100 fw-bold shadow-sm" @onclick="SaveAllAsOneTournament" disabled="@IsProcessing">
                                @if (IsProcessing) { <span class="spinner-border spinner-border-sm me-1"></span> <span>Verschmelze Event...</span> }
                                else { <i class="bi bi-rocket-takeoff-fill me-1"></i> <span>Event ins System schreiben</span> }
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                    <h5 class="fw-bold text-dark"><i class="bi bi-people-fill me-2 text-info"></i>3. Stammdaten-Import (Batch)</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted small mb-3">Liest beliebig viele Excel-Dateien ein, verknüpft Duplikate intelligent und füllt Lücken bei bestehenden Spielern auf (keine Turniere).</p>
                    <InputFile OnChange="@ImportMultiplePlayersOnly" accept=".xlsx" multiple class="form-control form-control-lg bg-light border-info" />
                    @if (IsProcessingPlayers) { <div class="d-flex align-items-center mt-3 text-info fw-bold"><span class="spinner-border spinner-border-sm me-2"></span> Analysiere Dateien und verarbeite Spieler...</div> }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private class PendingImport
    {
        public string FileName { get; set; } = "";
        public List<Player> Players { get; set; } = new();
    }

    private List<PendingImport> PendingImports = new();
    private bool IsProcessing = false;
    private bool IsProcessingPlayers = false;

    private string SuccessMessage = "";
    private string ErrorMessage = ""; 
    private bool IsAutoLoading = false;

    private string MasterTournamentName = "";
    private DateTime MasterTournamentDate = DateTime.Now.Date;

    private const int MAX_FILE_COUNT = 200; 
    private const long MAX_FILE_SIZE = 50 * 1024 * 1024; 

    protected override async Task OnInitializedAsync()
    {
        using var db = await DbFactory.CreateDbContextAsync();
        await db.Database.EnsureCreatedAsync(); 
        bool isDbEmpty = !await db.Tournaments.AnyAsync() && !await db.Players.AnyAsync();
        if (isDbEmpty) { IsAutoLoading = true; await LoadFromBrowserCache(silent: true); IsAutoLoading = false; }
    }

    private async Task SaveToBrowserCache() { try { ErrorMessage = ""; SuccessMessage = ""; var base64Db = await DbManager.GetDatabaseAsBase64Async(); if (string.IsNullOrEmpty(base64Db)) { ErrorMessage = "Datenbank ist leer."; return; } await JS.InvokeVoidAsync("window.browserStorage.saveDb", base64Db); SuccessMessage = "Datenbank erfolgreich im Browser-Cache gesichert!"; } catch (Exception ex) { ErrorMessage = "Speichern fehlgeschlagen: " + ex.Message; } }
    private async Task LoadFromBrowserCache(bool silent) { try { if (!silent) { ErrorMessage = ""; SuccessMessage = ""; } var base64Db = await JS.InvokeAsync<string>("window.browserStorage.loadDb"); if (string.IsNullOrEmpty(base64Db)) { if (!silent) ErrorMessage = "Kein Backup im Cache gefunden."; return; } using var memoryStream = new MemoryStream(Convert.FromBase64String(base64Db)); await DbManager.ImportDatabase(memoryStream); if (!silent) SuccessMessage = "Datenbank sofort live aus dem Browser-Cache geladen!"; else SuccessMessage = "Daten beim Start automatisch aus dem Cache wiederhergestellt."; StateHasChanged(); } catch (Exception ex) { if (!silent) ErrorMessage = "Laden fehlgeschlagen: " + ex.Message; } }
    private async Task DeleteBrowserCache() { try { await JS.InvokeVoidAsync("window.browserStorage.deleteDb"); SuccessMessage = "Der Browser-Cache wurde erfolgreich gelöscht."; StateHasChanged(); } catch (Exception ex) { ErrorMessage = "Löschen fehlgeschlagen: " + ex.Message; } }
    private async Task LoadDbFromFile(InputFileChangeEventArgs e) { try { ErrorMessage = ""; SuccessMessage = ""; using var stream = e.File.OpenReadStream(maxAllowedSize: MAX_FILE_SIZE); await DbManager.ImportDatabase(stream); SuccessMessage = "Datenbank live aus Datei geladen!"; StateHasChanged(); } catch (Exception ex) { ErrorMessage = "Datei-Import fehlgeschlagen: " + ex.Message; } }
    private async Task SaveDbToFile() => await DbManager.DownloadDatabase();

    private string? ExtractAgeGroupFromFilename(string fileName)
    {
        if (string.IsNullOrWhiteSpace(fileName)) return null;
        var upperName = fileName.ToUpper();
        var availableGroups = new List<string> { "U8", "U10", "U12", "U14", "U16", "U18" };
        var foundGroups = availableGroups.Where(g => upperName.Contains(g)).ToList();
        if (foundGroups.Count == 1) return foundGroups[0];
        return null;
    }

    // --- SMART-MERGE HILFSMETHODEN ---
    private async Task<Club?> GetOrMergeClub(ChessDbContext db, List<Club> existingClubs, Player p) 
    { 
        if (p.Club == null || string.IsNullOrWhiteSpace(p.Club.Name)) return null; 
        string importedClubName = p.Club.Name.Trim(); 
        var dbClub = existingClubs.FirstOrDefault(c => c.Name.Equals(importedClubName, StringComparison.OrdinalIgnoreCase) || (importedClubName.Length >= 4 && c.Name.Length >= 4 && (c.Name.Contains(importedClubName, StringComparison.OrdinalIgnoreCase) || importedClubName.Contains(c.Name, StringComparison.OrdinalIgnoreCase)))); 
        if (dbClub == null) { dbClub = new Club { Name = importedClubName }; db.Clubs.Add(dbClub); await db.SaveChangesAsync(); existingClubs.Add(dbClub); } 
        else { if (importedClubName.Length > dbClub.Name.Length) { dbClub.Name = importedClubName; db.Clubs.Update(dbClub); await db.SaveChangesAsync(); } } 
        return dbClub; 
    }

    // --- 🔴 HIER IST DAS NEUE VEREINSLOS-FEATURE FÜR SCHRITT 3 ---
    private async Task<(Player, bool, bool)> GetOrMergePlayer(ChessDbContext db, List<Player> existingPlayers, List<Club> existingClubs, Player importedPlayer, int? clubId) 
    { 
        bool isNew = false; 
        bool isUpdated = false; 
        var dbPlayer = existingPlayers.FirstOrDefault(dbP => dbP.Firstname.Equals(importedPlayer.Firstname, StringComparison.OrdinalIgnoreCase) && dbP.Lastname.Equals(importedPlayer.Lastname, StringComparison.OrdinalIgnoreCase)); 
        
        if (dbPlayer == null) 
        { 
            importedPlayer.Club = null; 
            importedPlayer.ClubId = clubId; 
            db.Players.Add(importedPlayer); 
            await db.SaveChangesAsync(); 
            existingPlayers.Add(importedPlayer); 
            isNew = true; 
            return (importedPlayer, isNew, isUpdated); 
        } 
        else 
        { 
            bool changed = false; 

            // Prüfe, ob der Spieler aktuell wirklich "Vereinslos" im alten Datensatz stehen hat.
            bool isCurrentlyVereinslos = false;
            if (dbPlayer.ClubId.HasValue)
            {
                var curClub = existingClubs.FirstOrDefault(c => c.ClubId == dbPlayer.ClubId.Value);
                if (curClub != null && curClub.Name.Trim().Equals("Vereinslos", StringComparison.OrdinalIgnoreCase))
                {
                    isCurrentlyVereinslos = true;
                }
            }

            // Prüfe, ob der NEUE Club ein echter Verein ist (damit wir nicht echten Verein mit "Vereinslos" überschreiben)
            bool isNewClubReal = false;
            if (clubId.HasValue)
            {
                var newClub = existingClubs.FirstOrDefault(c => c.ClubId == clubId.Value);
                if (newClub != null && !newClub.Name.Trim().Equals("Vereinslos", StringComparison.OrdinalIgnoreCase))
                {
                    isNewClubReal = true;
                }
            }

            // NEUE REGEL: Überschreibe den Verein, wenn er bisher NULL war ODER wenn er explizit "Vereinslos" hieß (und der neue Wert echt ist).
            if ((dbPlayer.ClubId == null || isCurrentlyVereinslos) && isNewClubReal) 
            { 
                dbPlayer.ClubId = clubId; 
                changed = true; 
            } 

            // Standard-Regeln für Elo, Jahrgang, Klasse
            if (importedPlayer.Elo.HasValue && dbPlayer.Elo != importedPlayer.Elo) { dbPlayer.Elo = importedPlayer.Elo; changed = true; } 
            if (!dbPlayer.BirthYear.HasValue && importedPlayer.BirthYear.HasValue) { dbPlayer.BirthYear = importedPlayer.BirthYear; changed = true; } 
            if (string.IsNullOrWhiteSpace(dbPlayer.AgeGroup) && !string.IsNullOrWhiteSpace(importedPlayer.AgeGroup)) { dbPlayer.AgeGroup = importedPlayer.AgeGroup; changed = true; } 
            
            if (changed) { db.Players.Update(dbPlayer); await db.SaveChangesAsync(); isUpdated = true; } 
            return (dbPlayer, isNew, isUpdated); 
        } 
    }

    private async Task ImportMultipleExcel(InputFileChangeEventArgs e)
    {
        ErrorMessage = ""; SuccessMessage = "";
        PendingImports.Clear();

        foreach (var file in e.GetMultipleFiles(maximumFileCount: MAX_FILE_COUNT))
        {
            try 
            {
                using var stream = file.OpenReadStream(maxAllowedSize: MAX_FILE_SIZE);
                var memoryStream = new MemoryStream();
                await stream.CopyToAsync(memoryStream);
                memoryStream.Position = 0;

                var players = ExcelService.ReadExcelStream(memoryStream);
                if (players != null && players.Any()) 
                {
                    string? detectedAgeGroup = ExtractAgeGroupFromFilename(file.Name);
                    if (!string.IsNullOrEmpty(detectedAgeGroup))
                    {
                        foreach(var p in players)
                        {
                            if (string.IsNullOrWhiteSpace(p.AgeGroup)) p.AgeGroup = detectedAgeGroup;
                        }
                    }

                    PendingImports.Add(new PendingImport { FileName = file.Name, Players = players });
                }
            }
            catch (Exception ex) { ErrorMessage += $"Fehler bei Datei {file.Name}: {ex.Message} "; }
        }

        if (PendingImports.Any() && string.IsNullOrWhiteSpace(MasterTournamentName))
        {
            MasterTournamentName = "Runde XY - Event";
        }
    }

    private async Task SaveAllAsOneTournament()
    {
        if (!PendingImports.Any() || string.IsNullOrWhiteSpace(MasterTournamentName)) return;
        IsProcessing = true; StateHasChanged();
        
        using var db = await DbFactory.CreateDbContextAsync(); 
        await db.Database.EnsureCreatedAsync();

        var masterTournament = new Tournament { Name = MasterTournamentName, Date = MasterTournamentDate };
        db.Tournaments.Add(masterTournament);
        await db.SaveChangesAsync();

        var existingClubs = await db.Clubs.ToListAsync();
        var existingPlayers = await db.Players.ToListAsync();

        int totalPlayersMerged = 0;

        foreach (var import in PendingImports)
        {
            foreach (var importedPlayer in import.Players)
            {
                var dbClub = await GetOrMergeClub(db, existingClubs, importedPlayer);
                
                // Wir übergeben jetzt die Liste der Clubs an die Check-Funktion, damit sie "Vereinslos" überprüfen kann.
                var (dbPlayer, _, _) = await GetOrMergePlayer(db, existingPlayers, existingClubs, importedPlayer, dbClub?.ClubId);

                bool alreadyInTournament = await db.PlayerTournaments.AnyAsync(pt => pt.TournamentId == masterTournament.TournamentId && pt.PlayerId == dbPlayer.PlayerId);

                if (!alreadyInTournament)
                {
                    double calculatedPoints = Math.Max(10, 21 - importedPlayer.TournamentRank);
                    db.PlayerTournaments.Add(new PlayerTournament { TournamentId = masterTournament.TournamentId, PlayerId = dbPlayer.PlayerId, Points = calculatedPoints, Rank = importedPlayer.TournamentRank });
                    totalPlayersMerged++;
                }
            }
        }
        await db.SaveChangesAsync();

        int fileCount = PendingImports.Count; 
        PendingImports.Clear(); MasterTournamentName = ""; IsProcessing = false;
        SuccessMessage = $"Das Event wurde erfolgreich erstellt! {fileCount} Altersklassen-Dateien wurden zu einem Turnier zusammengefasst und {totalPlayersMerged} Teilnehmer gespeichert.";
    }

    private async Task ImportMultiplePlayersOnly(InputFileChangeEventArgs e)
    {
        try
        {
            ErrorMessage = ""; SuccessMessage = ""; IsProcessingPlayers = true; StateHasChanged();
            var allExcelPlayers = new List<Player>();
            
            foreach (var file in e.GetMultipleFiles(maximumFileCount: MAX_FILE_COUNT)) 
            { 
                try 
                { 
                    using var stream = file.OpenReadStream(maxAllowedSize: MAX_FILE_SIZE); 
                    var memoryStream = new MemoryStream(); 
                    await stream.CopyToAsync(memoryStream); 
                    memoryStream.Position = 0; 
                    
                    var filePlayers = ExcelService.ReadExcelStream(memoryStream); 
                    if (filePlayers != null) 
                    {
                        string? detectedAgeGroup = ExtractAgeGroupFromFilename(file.Name);
                        if (!string.IsNullOrEmpty(detectedAgeGroup))
                        {
                            foreach(var p in filePlayers)
                            {
                                if (string.IsNullOrWhiteSpace(p.AgeGroup)) p.AgeGroup = detectedAgeGroup;
                            }
                        }
                        allExcelPlayers.AddRange(filePlayers); 
                    } 
                } 
                catch (Exception ex) { ErrorMessage += $"Fehler bei {file.Name}: {ex.Message} "; } 
            }

            if (!allExcelPlayers.Any()) { ErrorMessage += "Keine Spieler gefunden."; IsProcessingPlayers = false; return; }
            using var db = await DbFactory.CreateDbContextAsync(); await db.Database.EnsureCreatedAsync();
            var existingClubs = await db.Clubs.ToListAsync(); var existingPlayers = await db.Players.ToListAsync();
            int newPlayersCount = 0; int updatedPlayersCount = 0;
            foreach (var importedPlayer in allExcelPlayers) { 
                var dbClub = await GetOrMergeClub(db, existingClubs, importedPlayer); 
                
                // Wir übergeben jetzt die Liste der Clubs an die Check-Funktion
                var (dbPlayer, isNew, isUpdated) = await GetOrMergePlayer(db, existingPlayers, existingClubs, importedPlayer, dbClub?.ClubId); 
                if (isNew) newPlayersCount++; if (isUpdated) updatedPlayersCount++; 
            }
            SuccessMessage = $"Stammdaten-Update erfolgreich (aus {e.FileCount} Dateien): {newPlayersCount} neue Spieler, {updatedPlayersCount} Updates.";
        }
        catch (Exception ex) { ErrorMessage = "Fehler: " + ex.Message; }
        finally { IsProcessingPlayers = false; StateHasChanged(); }
    }
}