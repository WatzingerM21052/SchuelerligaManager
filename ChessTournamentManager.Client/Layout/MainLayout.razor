@inherits LayoutComponentBase
@inject IJSRuntime JS
@using ChessTournamentManager.Client.Services
@inject DatabaseManager DbManager

<div class="d-flex bg-light" style="min-height: 100vh;">

    <aside class="sidebar bg-white border-end shadow-sm d-print-none d-flex flex-column @(collapseNavMenu ? "d-none d-md-flex" : "d-flex")" style="width: 260px; z-index: 1000; transition: all 0.3s;">
        
        <a href="" class="text-decoration-none d-flex align-items-center px-4 py-3 border-bottom" style="height: 70px;">
            <i class="bi bi-grid-1x2-fill text-primary fs-4 me-2"></i>
            <span class="fs-5 fw-bold text-dark tracking-wide" style="font-size: 1.15rem !important;">Schülerligaverwaltung</span>
        </a>

        <nav class="flex-grow-1 px-3 py-4">
            <span class="text-uppercase fw-bold text-muted small px-3 mb-2 d-block" style="font-size: 0.75rem;">System</span>
            <NavLink class="nav-link text-secondary px-3 py-2 mb-1 d-flex align-items-center rounded-3 fw-semibold" href="" Match="NavLinkMatch.All"><i class="bi bi-cloud-arrow-up fs-5 me-3"></i><span>Import & Daten</span></NavLink>

            <span class="text-uppercase fw-bold text-muted small px-3 mt-4 mb-2 d-block" style="font-size: 0.75rem;">Stammdaten & Events</span>
            <NavLink class="nav-link text-secondary px-3 py-2 mb-1 d-flex align-items-center rounded-3 fw-semibold" href="spieler"><i class="bi bi-people fs-5 me-3"></i><span>Spieler</span></NavLink>
            <NavLink class="nav-link text-secondary px-3 py-2 mb-1 d-flex align-items-center rounded-3 fw-semibold" href="vereine"><i class="bi bi-buildings fs-5 me-3"></i><span>Vereine</span></NavLink>
            <NavLink class="nav-link text-secondary px-3 py-2 mb-1 d-flex align-items-center rounded-3 fw-semibold" href="turniere"><i class="bi bi-trophy fs-5 me-3"></i><span>Turniere & Ergebnisse</span></NavLink>

            <span class="text-uppercase fw-bold text-muted small px-3 mt-4 mb-2 d-block" style="font-size: 0.75rem;">Reporting</span>
            <NavLink class="nav-link text-secondary px-3 py-2 mb-1 d-flex align-items-center rounded-3 fw-semibold" href="auswertung"><i class="bi bi-pie-chart fs-5 me-3"></i><span>Analytics</span></NavLink>
        </nav>

        <div class="p-3 border-top text-center bg-white">
            <div class="mb-2"><span class="animated-chess-piece">♞</span></div>
            <div class="fw-bold small lh-1 text-dark">Version 1.4</div>
            <div class="text-muted mt-1" style="font-size: 0.75rem;">© 2025 by Matthias</div>
        </div>
    </aside>

    <div class="flex-grow-1 d-flex flex-column bg-light" style="min-width: 0;">
        <header class="bg-white border-bottom shadow-sm d-print-none d-flex align-items-center justify-content-between px-4" style="height: 70px;">
            <div class="d-flex align-items-center">
                <button class="btn btn-light d-md-none me-2" @onclick="ToggleNavMenu"><i class="bi bi-list fs-4"></i></button>
                <span class="text-muted fw-semibold d-none d-md-block"><i class="bi bi-broadcast text-success me-1"></i> Lokales System aktiv</span>
            </div>
            
            <div class="d-flex gap-2">
                <button class="btn btn-sm btn-outline-primary fw-bold d-flex align-items-center" @onclick="QuickBackup" title="Datenbank sofort auf PC sichern">
                    <i class="bi bi-download me-1"></i> Quick-Backup
                </button>
            </div>
        </header>

        <main class="flex-grow-1 overflow-auto">
            @Body
        </main>
    </div>
</div>

<style>
    /* HOVER UND ACTIVE STYLES FÜR DAS NEUE LIGHT-MENÜ */
    .sidebar .nav-link:hover { background-color: #f8f9fa; color: #0d6efd !important; }
    .sidebar .nav-link.active { background-color: #0d6efd !important; color: #ffffff !important; box-shadow: 0 4px 6px -1px rgba(13, 110, 253, 0.4); }
</style>

@code {
    private bool collapseNavMenu = true;
    private void ToggleNavMenu() => collapseNavMenu = !collapseNavMenu;
    private async Task QuickBackup() => await DbManager.DownloadDatabase();
}